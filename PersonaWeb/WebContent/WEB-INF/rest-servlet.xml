<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd
           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
           ">

	<context:annotation-config/><!-- Activa anotaciones en Spring -->
	<context:spring-configured/><!-- Activa ID por Autowired -->
	<context:component-scan 
		base-package="	
			es.indra.formacion.pr.js.front.rest
			"/>
			
	<mvc:annotation-driven /><!--  Allow for dispatching requests to controllers (produces and consumes) -->
</beans>